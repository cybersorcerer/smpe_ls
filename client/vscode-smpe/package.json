{
  "name": "vscode-smpe",
  "displayName": "SMP/E Language Support",
  "description": "Language support for SMP/E MCS statements",
  "version": "0.7.2",
  "publisher": "cybersorcerer",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/cybersorcerer/smpe_ls.git"
  },
  "homepage": "https://github.com/cybersorcerer/smpe_ls",
  "bugs": {
    "url": "https://github.com/cybersorcerer/smpe_ls/issues"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:smpe"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "smpe",
        "aliases": [
          "SMP/E",
          "smpe"
        ],
        "extensions": [
          ".smpe",
          ".mcs",
          ".smp"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "SMP/E Language Server",
      "properties": {
        "smpe.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to the smpe_ls executable. If empty, uses the bundled server."
        },
        "smpe.dataPath": {
          "type": "string",
          "default": "",
          "description": "Path to the smpe.json data file. If empty, uses the bundled data file."
        },
        "smpe.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging"
        },
        "smpe.diagnostics.unknownStatement": {
          "type": "boolean",
          "default": true,
          "description": "Report unknown statement types"
        },
        "smpe.diagnostics.invalidLanguageId": {
          "type": "boolean",
          "default": true,
          "description": "Report invalid 3-character language identifiers"
        },
        "smpe.diagnostics.unbalancedParentheses": {
          "type": "boolean",
          "default": true,
          "description": "Report unbalanced parentheses"
        },
        "smpe.diagnostics.missingTerminator": {
          "type": "boolean",
          "default": true,
          "description": "Report missing statement terminators (.)"
        },
        "smpe.diagnostics.missingParameter": {
          "type": "boolean",
          "default": true,
          "description": "Report missing required statement parameters"
        },
        "smpe.diagnostics.unknownOperand": {
          "type": "boolean",
          "default": true,
          "description": "Report unknown operands"
        },
        "smpe.diagnostics.duplicateOperand": {
          "type": "boolean",
          "default": true,
          "description": "Report duplicate operands"
        },
        "smpe.diagnostics.emptyOperandParameter": {
          "type": "boolean",
          "default": true,
          "description": "Report empty operand parameters"
        },
        "smpe.diagnostics.missingRequiredOperand": {
          "type": "boolean",
          "default": true,
          "description": "Report missing required operands"
        },
        "smpe.diagnostics.dependencyViolation": {
          "type": "boolean",
          "default": true,
          "description": "Report operand dependency violations (allowed_if)"
        },
        "smpe.diagnostics.mutuallyExclusive": {
          "type": "boolean",
          "default": true,
          "description": "Report mutually exclusive operand conflicts"
        },
        "smpe.diagnostics.requiredGroup": {
          "type": "boolean",
          "default": true,
          "description": "Report missing required group operands"
        },
        "smpe.diagnostics.missingInlineData": {
          "type": "boolean",
          "default": true,
          "description": "Report missing inline data for statements that expect it"
        },
        "smpe.diagnostics.unknownSubOperand": {
          "type": "boolean",
          "default": true,
          "description": "Report unknown sub-operands"
        },
        "smpe.diagnostics.subOperandValidation": {
          "type": "boolean",
          "default": true,
          "description": "Report sub-operand validation errors (empty/too long)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}
