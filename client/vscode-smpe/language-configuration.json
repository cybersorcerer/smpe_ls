{
  "comments": {
    "lineComment": "*"
  },
  "brackets": [
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "(", "close": ")" },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["'", "'"]
  ],
  "folding": {
    "markers": {
      "start": "^\\+\\+",
      "end": "^\\s*$"
    }
  }
}
