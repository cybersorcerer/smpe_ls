/* Test file for ++HOLD MCS statement */
/* Tests required_group validation for ERROR|FIXCAT|SYSTEM|USER */

/* ========================================== */
/* Valid ++HOLD statements                    */
/* ========================================== */

/* Valid: ERROR hold */
++HOLD(UZ12345)
          ERROR
          FMID(HBB7780)
          REASON(ABC1234)
          DATE(24365).

/* Valid: ERROR hold with ERR alias */
++HOLD(UZ12346)
          ERR
          FMID(HBB7781)
          REASON(DEF5678).

/* Valid: FIXCAT hold with CATEGORY */
++HOLD(UZ12347)
          FIXCAT(CATEGORY(HARDWARE))
		  F6
          FMID(HBB7782)
          REASON(GHI9012).

/* Valid: FIXCAT with multiple categories */
++HOLD(UZ12348)
          FIXCAT(CATEGORY(SOFTWARE,PERFORMANCE))
          FMID(HBB7783)
          REASON(JKL3456)
          CLASS(HIPER).

/* Valid: SYSTEM hold */
++HOLD(UZ12349)
          SYSTEM
          FMID(HBB7784)
          REASON(ACTION)
          COMMENT('Requires special processing').

/* Valid: SYSTEM hold with SYS alias */
++HOLD(UZ12350)
          SYS
          FMID(HBB7785)
          REASON(IPL).

/* Valid: USER hold */
++HOLD(UZ12351)
          USER
          FMID(HBB7786)
          REASON(CUSTOM01)
          COMMENT('User defined hold').

/* Valid: With all optional operands */
++HOLD(UZ12352)
          ERROR
          FMID(HBB7787)
          REASON(DB2BIND)
          DATE(24366)
          CLASS(PE)
          COMMENT('DB2 rebind required').


